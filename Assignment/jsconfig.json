{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "lib": [
      "es2017",
      "dom"
    ]
  },
  "include": [
    "./**/*.js",
    "./steps.d.ts"
  ],
  "exclude": [
    "node_modules",
    "output"
  ]
}